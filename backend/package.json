{
  "name": "xzity-dispatch-backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev src/index.ts",
    "build": "npm run prepare:db && tsc",
    "start": "node dist/index.js",
    "prisma:generate": "npx prisma generate --schema=prisma/schema.prisma",
    "prisma:migrate": "npx prisma migrate dev --schema=prisma/schema.prisma",
    "migrate:deploy": "npx prisma migrate deploy --schema=prisma/schema.prisma",
    "prepare:db": "npm run migrate:deploy && npm run prisma:generate"
  },
  "dependencies": {
    "@prisma/client": "^6.19.1",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "country-list": "^2.3.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "libphonenumber-js": "^1.12.10",
    "luxon": "^3.7.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.12",
    "prisma": "^6.19.1",
    "react": "^19.2.4",
    "react-native": "^0.83.1",
    "resend": "^6.2.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.18",
    "@types/country-list": "^2.1.4",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/luxon": "^3.6.2",
    "@types/node": "^20.19.30",
    "@types/node-fetch": "^2.6.12",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.2.10",
    "@types/react-native": "^0.72.8",
    "@types/socket.io": "^3.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.4"
  },
  "postinstall": "prisma generate --schema=prisma/schema.prisma"
}
